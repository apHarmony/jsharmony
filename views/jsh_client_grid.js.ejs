          if(inp.prop('checked')) {
            columns.push( {name:inp.val()});
          }
        });
        jshInstance.$(".xdialogblock").hide();
        xcontroller.SetDisplayLayout(columns);
        xcontroller.Refresh();
    }, function () { //onCancel
    }, function () { //onClosed
    });
  }

})(<%-instance%>);

