    xgrid.RequireSearch = <%-xejs.iif(model.grid_require_search,'true','false')%>;;
    xgrid.GetDBRowCount = <%-xejs.iif(('grid_rowcount' in model) && (model.grid_rowcount),'true','false')%>;

