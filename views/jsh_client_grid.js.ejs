    if(!xeditablegrid) return;

    var oldrowid = xcontroller.GetRowID();

    //Get Data, if data is new, delete row from both grid and ...
    if(xform.DataSet[rowid]._is_insert) return xcontroller.DeleteRow(rowid);
    //If HasChanges
