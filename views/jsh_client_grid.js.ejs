(function(jsh){
  var _ = jsh._;
  var $ = jsh.$;
  var XExt = jsh.XExt;
  var moment = jsh.moment;
  var modelid = '<%=model.id%>';
  var xmodel = jsh.XModels[modelid];
  var current_display_layout = undefined;
  var xcontroller = xmodel.controller = new XExt.XModel.XController(xmodel);
